@{
    ViewBag.Title = "Microsffer ToDo";
}

<div class="well">
    <h1>Microsffer ToDo</h1> Feito em AngularJS
</div>

<style>
    .input-group {
        width: 250px;
        margin: 0 auto;
    }

    .form-control {
        margin-bottom: 5px;
    }

    .cortaFonte {
        text-decoration: line-through;
    }
</style>

<div ng-app="atividadesModulo">
    <div ng-controller="listaController">

        <div class="input-group">
            <input type="hidden" id="IdTodo" ng-model="atividadestodo.IdTodo"/>
            <input type="text" maxlength="50" class="form-control" ng-model="atividadestodo.NomeTodo" placeholder="Digite a atividade." id="nomeTodo" />&nbsp;
            <input type="button" class="btn btn-primary btn-block" id="btnSalvar" ng-click="salvar(atividadestodo)" ng-value="atividadestodo.BtnSalvar"/>
            <button class="btn btn-primary btn-block" id="btnLimpar" ng-click="limpar()">Limpar</button>
        </div>

        <br /><br />
        <table class="table table-striped">
            <tr class="">
                <th>Nome da Atividade</th>
                <th>Editar</th>
                <th>Deletar</th>
            </tr>
            <tr ng-repeat="ativ in atividadestodo">
                <td><img src="~/AngularApp/image/checkbox_vazio.png" ng-click="atualizaStatus(ativ,1)" style="cursor:pointer;" title="Atividade realizada." />&nbsp; {{ativ.NomeTodo}}</td>
                <td>
                    <button class="btn btn-primary" ng-click="editarDados(ativ)">Editar</button>
                </td>
                <td>
                    <button class="btn btn-danger" ng-click="deleta(ativ)">Excluir</button>
                </td>
            </tr>
        </table>


        <hr />
        <table class="table table-striped">
            <tr class="">
                <th>Nome da(s) Atividade(s) Realizada(s)</th>
            </tr>
            <tr ng-repeat="ativ in atividadestodoRealizado">
                <td class="cortaFonte">
                    <img src="~/AngularApp/image/checkbox_preenchido.png" ng-click="atualizaStatus(ativ,0)" style="cursor:pointer;" title="Atividade realizada." />&nbsp; {{ativ.NomeTodo}}
                </td>
            </tr>
        </table>
    </div>

</div>


@section scripts
{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/AngularApp/js/atividades.js"></script>
    <script src="~/AngularApp/js/listaController.js"></script>
    <script src="~/AngularApp/js/atividadeService.js"></script>
}